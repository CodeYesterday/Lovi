<RadzenStack Orientation="Orientation.Vertical" Style="min-width: 300px;">
    @if (!string.IsNullOrEmpty(Text)){
        <div>@Text</div>
    }

    @foreach (var choice in Choices)
    {
        <RadzenCard Variant="Variant.Flat" class="w-100">
            <RadzenStack Orientation="Orientation.Vertical" class="w-100" Gap="0.5em">
                <RadzenStack Orientation="Orientation.Horizontal" Gap="1em">
                    @if (!string.IsNullOrEmpty(choice.Icon))
                    {
                        <RadzenIcon Icon="@choice.Icon" IconColor="@choice.IconColor" IconStyle="@(choice.IconStyle)" />
                    }
                    <RadzenText Text="@choice.Title" TextStyle="TextStyle.H6"/>
                </RadzenStack>
                
                @if (!string.IsNullOrEmpty(choice.Description))
                {
                    <div>@choice.Description</div>
                }
                
                <RadzenButton Text="@choice.ButtonText" ButtonStyle="@(choice.ButtonStyle ?? DialogOptions?.DefaultButtonStyle ?? ButtonStyle.Secondary)"
                              Icon="@choice.ButtonIcon" IconColor="@choice.ButtonIconColor"
                              Click="_ => OnCloseDialog(choice.Id)"/>
            </RadzenStack>
        </RadzenCard>
    }
</RadzenStack>
